<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title style="color: rgb(1, 101, 12);">Seeds n Shrubs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body style="background-color:rgb(147, 249, 157)">
    {% include "components/navbar.html.jinja"%}
    <h1 style="color: rgb(1, 101, 12);" class="mt-3 text-center">Previous Orders</h1>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <div class="container">
        <div class='row'>
            <div class="col-1"></div>
            <div class="col-10">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Order #</th>
                                <th scope="col">Date</th>
                                <th scope="col">Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for sale in sales%}
                            <tr>
                                <th class="table-secondary"><a href="/past_orders/{{sale['id']}}"> {{sale["id"]}} </a>
                                </th>

                                <th class="table-secondary"> {{sale["timestamp"].strftime("%Y-%d-%m")}}</th>

                                <td class="table-secondary">{{sale["address"]}}</td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-1"></div>
        </div>
    </div>
</body>

</html>