<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Seeds n Shrubs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body style = "background-color:rgb(147, 249, 157)">
    {% include "components/navbar.html.jinja"%}

    <div class = "container mt-2">

    {%for message in get_flashed_messages() %}
        <div class="alert alert-info" role="alert">
            {{message}}
        </div>
    {% endfor %}

    <form action="/sign_up" method="post">
      
      <h4 class="card-title text-success text-left ml-2 mt-4" >First Name:</h4>
      <input type="text" class="form-control "  placeholder="John" name = "first_name" required value="{{ request.form.get('first_name', '') }}">
      <br>
      
      <h4 class="card-title text-success text-left ml-2" >Last Name:</h4>
      <input type="text" class="form-control "  placeholder="Doe" name = "last_name" required value="{{ request.form.get('last_name', '') }}">
      <br>
      
      <h4 class="card-title text-success text-left ml-2" >Email:</h4>
      <input type="email" class="form-control" id="exampleFormControlInput1" name = "email" placeholder="email@seedsnshrubs.com" required value="{{ request.form.get('email', '') }}">
      <br>
      
      <h4 class="card-title text-success text-left ml-2" >Address:</h4>
      <input type="text" class="form-control "  placeholder="1234 Greenery Ave." name = "address" required value="{{ request.form.get('address', '') }}">
      <br>
      
      <h4 class="card-title text-success text-left ml-2" >Username:</h4>
      <input type="text" class="form-control "  placeholder="MyPl4ntR0cks" name = "user_name"required value="{{ request.form.get('user_name', '') }}">
      <br>
      
      <h4 class="card-title text-success text-left ml-2" >Password:</h4>
      <input type="password" class="form-control"  placeholder="Password123%" name = "password"required>
      <br>
      
      <h4 class="card-title text-success text-left ml-2" >Comfirm Password:</h4>
      <input type="password" class="form-control"  placeholder="Password123%" name = "verify_password" required>
      <br>
      
      <div class="d-grid gap-2 col-4 mx-auto">
        <input class="btn btn-success btn-lg" type="submit" value="Sign Up">
      </div>
      <br>
      
      <br>
      <input name="send-to" value="" hidden>
    </form>
    
    </div>
</body>

</html>