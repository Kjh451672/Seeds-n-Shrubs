<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title style="color: rgb(1, 101, 12);">Seeds n Shrubs</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body style="background-color:rgb(147, 249, 157)">
  {% include "components/navbar.html.jinja"%}
  <h2 style="color: rgb(1, 101, 12);" class="mt-2 text-center">Check Out</h2>
  <div class="container">
    <div class="row">
      <div class="col-5">
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Product</th>
                <th scope="col">Quantity</th>
                <th scope="col">Total</th>
              </tr>
            </thead>
            <tbody>
              {% for item in products%}
              <tr>
                <th class="table-primary"> <img src="{{item['image']}}" height="30px"> {{item["product"]}} ${{"%.2f" |
                  format(item["price"])}}</th>

                <td class="table-primary">{{item["quantity"]}}</td>

                <td class="table-info">${{"%.2f" | format (item["price"] * item ["quantity"])}}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
          <h5 style="color: rgb(1, 101, 12);" class = "text-center">Total: ${{"%.2f" | format(total)}}</h5>
        </div>
      </div>
      <div class = "col-7">

        <form action = "/sales" method = "post">

          <h4 class="card-title text-success text-left ml-2 mt-3" >Billing Address:</h4>
          <input type="text" class="form-control "  name = "address" placeholder="1234 Mangrove Ave." required>
          <br>
      
          <h4 class="card-title text-success text-left ml-2" >Card number:</h4>
          <input type="text" class="form-control"  name = "payment" placeholder="XXXX-XXXX-XXXX-XXXX" required>
          <br>

          <div class="d-grid gap-2 col-4 mx-auto">
            <button href="/thank_you" type = "submit" class="btn btn-success btn-md">Comfirm Purchase</button>
            <a href="/cart" class="btn btn-danger btn-md">Return To Cart</a>
          </div>

        </form>
      </div>
    </div>
  </div>
  

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
    crossorigin="anonymous"></script>


</body>

</html>