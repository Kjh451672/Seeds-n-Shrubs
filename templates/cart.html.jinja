<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title style = "color: rgb(1, 101, 12);">Seeds n Shrubs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body style = "background-color:rgb(168, 250, 176)">
    {% include "components/navbar.html.jinja"%}
    <h1 style = "color: rgb(1, 101, 12);" class = "mt-3 text-center">Cart</h1>
    <div class="table-responsive">
        <table class="table">
           <thead>
            <tr>
             <th scope="col">Product</th>
             <th scope="col">Price</th>
             <th scope="col">Quantity</th>
             <th scope="col">Total</th>
             <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for item in products%}
                <tr>
                 <th class="table-success"> <img src="{{item['image']}}" height="50px"> {{item["product"]}}</th>
                 <td class="table-success">${{item["price"]}}</td>
                 <td class="table-success">
                    <input class = "form-control" value = "{{item['quantity']}}" max = "5" min = "1">
                 </td>
                 <td class="table-success">${{item["price"] * item ["quantity"]}}</td>
                 <td class="table-secondary">
                    <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="30" height="30"><path d="M4.5 3V1.5a1 1 0 011-1h4a1 1 0 011 1V3M0 3.5h15m-13.5 0v10a1 1 0 001 1h10a1 1 0 001-1v-10M7.5 7v5m-3-3v3m6-3v3" stroke="currentColor"></path></svg>
                    <svg viewBox="0 0 15 15" fill="none" xmlns="http://www.w3.org/2000/svg" width="30" height="30"><path d="M.5 9.5l-.354-.354L0 9.293V9.5h.5zm9-9l.354-.354a.5.5 0 00-.708 0L9.5.5zm5 5l.354.354a.5.5 0 000-.708L14.5 5.5zm-9 9v.5h.207l.147-.146L5.5 14.5zm-5 0H0a.5.5 0 00.5.5v-.5zm.354-4.646l9-9-.708-.708-9 9 .708.708zm8.292-9l5 5 .708-.708-5-5-.708.708zm5 4.292l-9 9 .708.708 9-9-.708-.708zM5.5 14h-5v1h5v-1zm-4.5.5v-5H0v5h1zM6.146 3.854l5 5 .708-.708-5-5-.708.708zM8 15h7v-1H8v1z" fill="currentColor"></path></svg>
                 </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <div class="d-grid gap-2 col-4 mx-auto">
        <a href="/checkout" class="btn btn-success btn-md">Go To Checkout</a>
    </div>

  </body>
</html>


