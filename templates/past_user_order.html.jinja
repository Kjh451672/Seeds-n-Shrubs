<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title style = "color: rgb(1, 101, 12);">Seeds n Shrubs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  </head>
  <body style = "background-color:rgb(147, 249, 157)">
    {% include "components/navbar.html.jinja"%}
    <h1 style = "color: rgb(1, 101, 12);" class = "mt-3 text-center">Previous Order</h1>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Product</th>
                <th scope="col">Price</th>
                <td scope="col">Quantity</td>
              </tr>
            </thead>
            <tbody>
              {% for item in products%}
              <tr>
                <th class="table-secondary"> <img src="{{item['image']}}" height="40px"> {{item["product"]}} </th>

                <th class="table-secondary">${{"%.2f" | format(item["price"])}}</th>

                <td class="table-secondary">{{item["quantity"]}}</td>
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
  </body>
</html>